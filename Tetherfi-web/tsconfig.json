{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "es2020",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "typeRoots": ["node_modules/@types"],
        "paths": {
            "@modules/*": ["app/modules/*"],
            "@data/*": ["app/data/*"],
            "@app/*": ["app/core/*"],
            "@shared/*": ["app/shared/*"],
            "@env": ["environments/environment"]
        },
        "lib": ["es2019", "dom", "dom.iterable"]
    },
    "exclude": ["node_modules"]
}
